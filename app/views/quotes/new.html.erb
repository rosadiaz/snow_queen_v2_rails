<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-4">
      <form action="" id="addressSearchBar">
        <div class="input-group m-3">
          <input id="addressInput" type="text" class="form-control" placeholder="Search address" aria-label="Address" aria-describedby="button-addon2">
          <div class="input-group-append">
            <button class="btn disabled" type="submit" id="addressSubmit" disabled><span>üîç</span></button>
          </div>
        </div>
